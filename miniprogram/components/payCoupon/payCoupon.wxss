    radial-gradient(circle at right top, #F7F7F7, #F7F7F7 10px, transparent 11px);
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  /* justify-content: center; */
}

.exchange-coupon-tip-left {
  opacity: 0.7;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #000000;
  letter-spacing: 0;
  margin-right: 12rpx;
  margin-left: 40rpx;
}

.general-coupon-tip-left {
  opacity: 1;
  font-family: PingFangSC-Light;
  font-size: 24rpx;
  color: gray;
  letter-spacing: 0;
  line-height: 40rpx;
  border: 2px solid #E9E9E9;
  border-radius: 20rpx;
  margin-right: 40rpx;
  margin-left: 27rpx;
  padding: 0 20rpx 0 20rpx;
}

.exclusive-coupon-tip-left {
  opacity: 0.3;
  font-family: PingFangSC-Light;
  font-size: 24rpx;
  color: #000000;
  letter-spacing: 0;
  margin-left: 50rpx;
}

.tip-right {
  opacity: 0.4;
  font-family: PingFangSC-Light;
  font-size: 24rpx;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
  display: flex;
  align-items: center;
  margin-right: 4rpx;
}

.money-huadiao {
  opacity: 0.4;
  font-family: PingFangSC-Light;
  font-size: 24rpx;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
  text-decoration: line-through;
}

