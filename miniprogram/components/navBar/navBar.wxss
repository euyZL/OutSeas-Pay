.navbar {
  width: 100%;
  overflow: hidden;
  /* position: fixed; */
  position: absolute;
  top: 0;
  left: 0;
  flex-shrink: 0;
  z-index: 2;
}

.watsons{
  background: linear-gradient(223deg, #FF723F 100%, #E74833 0%);
}

.navbar-title {
  width: 100%;
  box-sizing: border-box;
  padding-left: 115rpx;
  padding-right: 115rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  position: absolute;
  left: 0;
  color: white;
  font-size: 34rpx;
  font-weight: bold;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.arrow{
  position: relative;
  display: inline-block;
  content: '';
  width: 29rpx;
  height: 29rpx;
  border-left: 5rpx solid #FFFFFF;
  border-bottom: 5rpx solid #FFFFFF;
  transform: scale(0.7) translate(36rpx,18rpx) rotateZ(45deg);
}

